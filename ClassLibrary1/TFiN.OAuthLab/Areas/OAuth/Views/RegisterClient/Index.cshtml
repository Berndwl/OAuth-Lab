@{
    ViewBag.Title = "Registreer Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model TFiN.OAuthLab.Areas.OAuth.Models.ClientViewModel

<h2>Registreer Client</h2>

@using (Html.BeginForm("Register", "RegisterClient", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    <div class="form-group">
        <label class="control-label">Naam</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Naam, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Website</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Website, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Redirect URI</label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.RedirectURI, new { @class = "form-control" })
        </div>
    </div>

    <button type="submit" class="btn btn-default"><i class="fa fa-fw fa-plus"></i> Registreer</button>

}